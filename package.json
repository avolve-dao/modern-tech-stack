{
  "name": "modern-tech-stack-knowledge-base",
  "version": "2.0.0",
  "description": "AI-Native Development Knowledge Base with executable documentation and validation",
  "type": "module",
  "scripts": {
    "validate": "npm run validate:stack && npm run validate:links && npm run validate:examples",
    "validate:stack": "node executable/validators/stack-compatibility.js",
    "validate:links": "node executable/validators/link-checker.js",
    "validate:examples": "node executable/validators/example-tester.js",
    "generate": "node executable/generators/project-template.js",
    "benchmark": "node executable/benchmarks/performance-suite.js",
    "update:versions": "node executable/validators/version-updater.js",
    "test": "npm run validate",
    "lint": "eslint executable/ --ext .js,.mjs",
    "format": "prettier --write '**/*.{js,mjs,md,json}'",
    "docs:validate": "npm run validate && echo 'âœ… All documentation validated'",
    "docs:generate": "npm run generate list",
    "docs:update": "npm run update:versions && npm run validate",
    "ci": "npm run lint && npm run validate"
  },
  "keywords": [
    "modern-tech-stack",
    "ai-native-development",
    "next.js",
    "react",
    "typescript",
    "supabase",
    "vercel-ai-sdk",
    "documentation",
    "executable-docs",
    "knowledge-base"
  ],
  "author": "Modern Tech Stack Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/avolve-dao/modern-tech-stack.git"
  },
  "homepage": "https://github.com/avolve-dao/modern-tech-stack#readme",
  "devDependencies": {
    "eslint": "^9.15.0",
    "prettier": "^3.6.2",
    "@types/node": "^22.14.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "marked": "^12.0.0",
    "semver": "^7.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    "./validators/*": "./executable/validators/*.js",
    "./generators/*": "./executable/generators/*.js",
    "./schemas/*": "./executable/schemas/*.json"
  },
  "files": [
    "executable/",
    "navigation/",
    "patterns/",
    "*.md",
    "!node_modules/"
  ]
}